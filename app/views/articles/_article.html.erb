<div class="row">
  <div class="col-md-12">
    <div class="article">
      <h2>
        <%= link_to article.title, article_path(article.id) %> <br>
        <small><%= article.created_at.strftime("Published on %d.%m.%Y") %></small>
      </h2>
      <p>
        <%= simple_format article.body %>
      </p>
    </div>
  </div>
</div>
